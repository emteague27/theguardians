<!DOCTYPE html>
<html>
<head>
  <title>The Guardians| An Environmental Science Learning App</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Coming+Soon|Trade+Winds' rel='stylesheet' type='text/css'>
</head>
<body>
	<nav class="navbar">
		<div id="leftnav">
			<% if current_student %>
				<%= link_to "The Guardians", student_path(current_student), :class => "logo" %>
			<% elsif current_teacher %>				
				<%= link_to "The Guardians", teacher_path(current_teacher), :class => "logo" %>
			<% elsif admin %>
				<%= link_to "The Guardians", admin_path(admin), :class => "logo" %>
			<% else %>
				<%= link_to "The Guardians", root_path, :class => "logo" %>
			<% end %>
		</div>
		<div id="rightnav">
			<span>
				<%= link_to "Sign Out", logout_path if @current_student || @current_teacher || admin %>
			</span>
		</div>
	</nav>
	<%= flash[:success] if flash[:success] %>
	<%= flash[:fail] if flash[:fail] %>
	<div class="main_container">
		<%= yield %>
	</div>
	<footer class="footer">
		<p id="cpyrt">Copyright Erin Teague 2016</p>
	</footer>

	

</body>
</html>
