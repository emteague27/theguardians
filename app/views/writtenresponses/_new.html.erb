
<%= form_for new_writtenresponse_path do |f| %>
	<%= f.text_field :student_id, :value => "#{current_student}", :hidden => true %>
	<%= f.text_field :lesson_id, :value => "#{params[@lesson.id]}", :hidden => true %>
	<%= f.text_field :response , placeholder: "Type your answer here...", :class => "txtinpt" %>
	<%= f.submit "Submit" %>
<% end %>