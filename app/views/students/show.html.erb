<div id="left-col">
	<h1 class="welcome">Welcome, </h1>
	<h1 class="wel-name"><%= @student.fname + " " + @student.lname %></h1>
	<div class="imghldr"></div>
	<h3>grade: <%= @student.grade%></h3>
	<h3>teacher: <%= @student.teacher.lname%></h3>
</div>

<div id="right-col">
	<div id="btnbox">
		<div class="lesson-btn">
				<%= link_to "Start a New Adventure", lessons_path, :class => "link" %>
		</div>
	</div>
	<h1 id="classhdr">Completed Adventures:</h1>
	<ul>
		<% @lessons.each do |lesson| %>
			<li><%= lesson.title %><li>
		<% end %>
	</ul>
	
	
</div>