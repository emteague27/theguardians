<%= form_for @student, :class => "stu-form" do |f| %>
	<%= f.text_field :fname, placeholder: "First Name", :class => "stu-formfld"%><br>
	<%= f.text_field :lname, placeholder: "Last Name", :class => "stu-formfld"%><br>
	<%= f.text_field :username, placeholder: "Username", :class => "stu-formfld"%><br>
	<%= f.text_field :grade, placeholder: "grade", :class => "stu-formfld"%><br>
	<%= f.text_field :classroom_id, value: @classroom.id, hidden:true, :class => "stu-formfld" %>
	<%= f.text_field :teacher_id, value: @teacher.id, hidden:true, :class => "stu-formfld" %>
	<%= f.password_field :password, placeholder: "Password", :class => "stu-formfld"%><br>	
	<%= f.submit "Create Student", :class => "stu-submit"%>
<% end %>